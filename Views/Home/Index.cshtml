@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 mb-4 text-primary fw-bold">Welcome to Contact Manager</h1>

    <p class="lead mb-4 text-dark">
        This is a simple yet powerful app to manage your contacts efficiently.
    </p>

    <a href="@Url.Action("Index", "Contacts")" class="btn btn-primary btn-gradient shadow px-4 py-2">
        <i class="fas fa-address-book me-2"></i> Go to Contacts
    </a>

    <div class="row mt-5 justify-content-center">
        <div class="col-md-4 mb-3">
            <div class="p-4 rounded shadow-sm bg-white text-start">
                <h5><i class="fas fa-users text-secondary me-2"></i> Manage Contacts</h5>
                <p class="text-muted small mb-0">Create, edit, and organize your contacts easily.</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="p-4 rounded shadow-sm bg-white text-start">
                <h5><i class="fas fa-sync-alt text-secondary me-2"></i> Real-Time Sync</h5>
                <p class="text-muted small mb-0">See updates live with SignalR integration.</p>
            </div>
        </div>
    </div>

</div>
